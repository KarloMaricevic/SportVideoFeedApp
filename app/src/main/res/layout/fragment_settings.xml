<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/person_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foregroundGravity="center"
        app:layout_constraintTop_toTopOf="@id/my_profile_text_view"
        app:layout_constraintBottom_toBottomOf="@id/my_profile_text_view"
        app:layout_constraintEnd_toStartOf="@id/my_profile_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_person"
        android:contentDescription="@string/myprofilepicture"
        app:layout_constraintHorizontal_weight="9"
        />

    
    <TextView
        android:id="@+id/my_profile_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/my_profile"
        android:textStyle="bold"
        android:textSize="14sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/person_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="80"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
