<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/person_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/myprofilepicture"
        android:foregroundGravity="center"
        android:src="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="@id/my_profile_text_view"
        app:layout_constraintEnd_toStartOf="@id/my_profile_text_view"
        app:layout_constraintHorizontal_weight="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_profile_text_view" />


    <TextView
        android:id="@+id/my_profile_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:text="@string/my_profile"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="80"
        app:layout_constraintStart_toEndOf="@id/person_image_view"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/history_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/my_history"
        android:foregroundGravity="center"
        android:src="@drawable/ic_history"
        app:layout_constraintBottom_toBottomOf="@+id/my_history_text_view"
        app:layout_constraintEnd_toStartOf="@id/my_history_text_view"
        app:layout_constraintHorizontal_weight="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_history_text_view" />

    <TextView
        android:id="@+id/my_history_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/history"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="80"
        app:layout_constraintStart_toEndOf="@id/history_image_view"
        app:layout_constraintTop_toBottomOf="@+id/my_profile_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
